<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biletix.Views.Search">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Ara" x:Name="searchBar" TextChanged="Sb_Text_Change"></SearchBar>
            <CollectionView x:Name="myCollectionView" ItemsSource="{Binding events}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <ScrollView>
                            <Grid BackgroundColor="White">
                                <Frame Padding="10" BorderColor="Black">
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand" >
                                        <ImageButton BackgroundColor="#0000" Source="{Binding image}" Grid.Row="0" Grid.Column="0" HeightRequest="100" WidthRequest="100"></ImageButton>
                                        <Label FontSize="20" Margin="20,0" TextColor="Black" VerticalOptions="Center" Text="{Binding name}"></Label>
                                    </StackLayout>
                                </Frame>
                            </Grid>
                        </ScrollView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>