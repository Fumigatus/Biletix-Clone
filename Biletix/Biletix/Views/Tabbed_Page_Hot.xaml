                                    <LinearGradientBrush EndPoint="1,0">
                                        <GradientStop Color="Black" Offset="0"></GradientStop>
                                        <GradientStop Color="#0000" Offset="1"></GradientStop>
                                    </LinearGradientBrush>
                                </Grid.Background>
                                <Label Text="26 Mart" TextColor="White" Grid.Row="0"></Label>
                                <Label Text="Yıldız Tilbe" TextColor="White" Grid.Row="1" FontAttributes="Bold"></Label>
